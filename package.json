{
    "name": "magnusrand",
    "version": "1.0.0",
    "description": "Portefolio website for Magnus Rand",
    "main": "index.js",
    "author": "Magnus Rand",
    "license": "ISC",
    "private": "true",
    "scripts": {
        "clean": "rm -rf dist/",
        "eslint": "eslint src --ext 'js,jsx,ts,tsx'",
        "format": "prettier . --write",
        "format:check": "prettier . --check",
        "lint": "npm run eslint && npm run stylelint && npm run format:check",
        "start": "webpack serve",
        "local": "webpack serve --env development",
        "build-dev": "webpack --mode development",
        "build-prod": "npm run clean && webpack --mode production"
    },
    "dependencies": {
        "animate-css-grid": "^1.4.3",
        "classnames": "^2.5.1",
        "exifr": "^7.1.3",
        "firebase": "^10.12.3",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-icons": "^5.3.0",
        "react-router-dom": "^6.28.0"
    },
    "devDependencies": {
        "@babel/core": "^7.16.0",
        "@babel/preset-env": "^7.16.4",
        "@babel/preset-react": "^7.16.0",
        "@svgr/webpack": "^6.2.1",
        "@types/react": "^17.0.36",
        "@types/react-dom": "^17.0.11",
        "@types/react-router-dom": "^5.3.2",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "autoprefixer": "^10.4.0",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.2.3",
        "css-loader": "^7.1.2",
        "eslint": "^7.32.0",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.27.1",
        "eslint-plugin-react-hooks": "^4.2.0",
        "html-webpack-plugin": "^5.5.0",
        "postcss": "^8.4.49",
        "postcss-loader": "^8.1.1",
        "postcss-nested": "^7.0.2",
        "postcss-preset-env": "^7.0.1",
        "prettier": "^2.4.1",
        "style-loader": "^4.0.0",
        "ts-loader": "^9.5.1",
        "typescript": "^5.7.2",
        "webpack": "^5.64.2",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.0.4"
    },
    "prettier": {
        "trailingComma": "all",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "stylelint": {
        "extends": [
            "stylelint-config-standard",
            "stylelint-config-prettier"
        ],
        "rules": {
            "at-rule-no-unknown": [
                true,
                {
                    "ignoreAtRules": [
                        "extend",
                        "at-root",
                        "debug",
                        "warn",
                        "error",
                        "if",
                        "else",
                        "for",
                        "each",
                        "while",
                        "mixin",
                        "include",
                        "content",
                        "return",
                        "function"
                    ]
                }
            ],
            "no-descending-specificity": [
                true,
                {
                    "severity": "warning"
                }
            ]
        }
    }
}
