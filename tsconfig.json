{
    "compilerOptions": {
        "jsx": "react",
        "module": "NodeNext",
        "noImplicitAny": true,
        "outDir": "./dist/",
        "lib": ["ESNext", "dom", "dom.iterable"],
        "esModuleInterop": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES6",
        "moduleResolution": "nodenext",
        "baseUrl": "."
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
