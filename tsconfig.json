{
    "compilerOptions": {
        "jsx": "react",
        "module": "NodeNext",
        "noImplicitAny": true,
        "outDir": "./dist/",
        "lib": ["ESNext", "dom", "dom.iterable"],
        "esModuleInterop": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES6",
        "moduleResolution": "nodenext",
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@pages/*": ["src/pages/*"],
            "src/*": ["src/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
